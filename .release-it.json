{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release ${version}"
  },
  "hooks": {
    "before:init": ["npm run lint", "npm run format", "npm run test"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          }
        ]
      }
    }
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true
  }
}
